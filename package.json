{
  "name": "todoist-monorepo",
  "version": "1.0.0",
  "description": "Todoist services monorepo - DefTime, Done, and Durations apps",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
