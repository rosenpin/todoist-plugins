{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2022", "WebWorker"],
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@shared/*": ["./shared/*/src"],
      "@apps/*": ["./apps/*/src"]
    }
  },
  "include": [
    "apps/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.config.js"
  ]
}